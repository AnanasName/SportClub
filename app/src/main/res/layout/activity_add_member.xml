<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMemberActivity">

    <TextView
        android:id="@+id/adding_new_member_first_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:text="First Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/adding_new_member_first_name_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        app:layout_constraintBottom_toBottomOf="@+id/adding_new_member_first_name_text_view"
        app:layout_constraintStart_toEndOf="@+id/adding_new_member_first_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/adding_new_member_first_name_text_view"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/adding_new_member_last_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        app:layout_constraintEnd_toEndOf="@+id/adding_new_member_first_name_text_view"
        app:layout_constraintStart_toStartOf="@+id/adding_new_member_first_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/adding_new_member_first_name_text_view"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/adding_new_member_last_name_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="Last Name"
        app:layout_constraintLeft_toRightOf="@id/adding_new_member_first_name_text_view"
        app:layout_constraintStart_toEndOf="@+id/adding_new_member_first_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/adding_new_member_first_name_edit_text"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/adding_new_member_gender_text_view"
        app:layout_constraintTop_toBottomOf="@+id/adding_new_member_last_name_text_view"
        app:layout_constraintStart_toStartOf="@id/adding_new_member_last_name_text_view"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender" />

    <Spinner
        android:id="@+id/adding_new_member_gender_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/adding_new_member_first_name_text_view"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/adding_new_member_last_name_edit_text"
        android:layout_marginTop="47dp"/>

    <TextView
        android:id="@+id/adding_new_member_group_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group"
        app:layout_constraintStart_toStartOf="@+id/adding_new_member_gender_text_view"
        app:layout_constraintTop_toBottomOf="@+id/adding_new_member_gender_text_view"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/adding_new_member_group_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Group"
        app:layout_constraintStart_toEndOf="@+id/adding_new_member_first_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/adding_new_member_gender_spinner"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>